<p id="notice"><%= notice %></p>

<h1>
  <%= @rc.name %>
</h1>

<div id="content">

<%= link_to 'Back', run_path(@run) %>

<br />
<div id="run_steps_table" class="data_table bs-docs-grid">
  <div class="row-fluid show-grid">
    <div class="span2"></div>
    <div class="span4">Status</div>
    <div class="span4">Description</div>
  </div>
<% @steps.each do |step| %>
  <div id="run_step_<%= step.id %>" data-id="<%= step.id %>" class="row-fluid show-grid run_step_row" data-run_case_id="<%= @rc.id %>" data-run_id="<%= @rc.run.id %>">
    <div class="span2"><a class="delete" href="#">Delete</a></div>
    <div class="span4 name"><%= step.status %></div>
    <div class="span4 description"><%= step.description %></div>
  </div>
<% end %>
</div>

</div>
