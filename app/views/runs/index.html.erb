<h1>Slick Test</h1>

<div id="content">

  <%= link_to 'Back', "/" %>

<a id="new_run_modal_btn" data-backdrop="false" type="button" class="btn btn-primary new_modal_btn" href="#new_run_modal" data-toggle="modal">New Test Run</a>
<br />
<div id="runs_table" class="bs-docs-grid data_table">
  <div class="row-fluid show-grid">
    <div class="span2"></div>
    <div class="span4">Name</div>
  </div>
<% @runs.each do |run| %>
  <div id="run_<%= run.id %>" data-id="<%= run.id %>" class="row-fluid show-grid run_row">
    <div class="span2"><a class="delete" href="#">Delete</a></div>
    <div class="span4 name"><%= link_to run.name, run_path(run) %></div>
  </div>
<% end %>
</div>

<div id="new_run_modal" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>New Run</h3>
  </div>
  <div class="modal-body">
  </div>
</div>

</div>
