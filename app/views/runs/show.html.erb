<p id="notice"><%= notice %></p>

<h1>
  <%= @project.name %>
</h1>

<div id="content">

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<a id="new_case_modal_btn" data-backdrop="false" type="button" class="new_modal_btn btn btn-primary" href="#new_case_modal" data-toggle="modal" data-project_id="<%= @project.id %>">New Case</a>
<br />
<div id="cases_table" class="data_table bs-docs-grid">
  <div class="row-fluid show-grid">
    <div class="span2"></div>
    <div class="span4">Name</div>
    <div class="span4">Description</div>
  </div>
<% @tcs.each do |tc| %>
  <div id="case_<%= tc.id %>" data-id="<%= tc.id %>" class="row-fluid show-grid case_row" data-project_id="<%= @project.id %>">
    <div class="span2"><a class="delete" href="#">Delete</a></div>
    <div class="span4 name"><%= link_to tc.name, project_test_case_path(@project, tc) %></div>
    <div class="span4 description"><%= tc.description %></div>
  </div>
<% end %>
</div>

<div id="new_case_modal" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Test Case</h3>
  </div>
  <div class="modal-body">
  </div>
</div>

</div>
