<div id="content">

  <h1>Users</h1>

  <p id="notice"><%= notice %></p>

<a id="new_user_modal_btn" data-backdrop="false" type="button" class="btn btn-primary new_modal_btn" href="#new_user_modal" data-toggle="modal">New User</a>
<br />
<table id="users_table" class="table table-bordered table-responsive data_table">
  <thead>
    <tr>
    <th style="width:10%"></th>
    <th style="width:90%">Name</th>
  </tr>
</thead>
<tbody>
<% @users.each do |user| %>
  <tr id="user_<%= user.id %>" data-id="<%= user.id %>" class="user_row">
    <td class="edit-col"><a class="delete" href="#"><span class="glyphicon glyphicon-trash"></span></a></td>
    <td class="name"><%= link_to user.name, user_path(user) %></td>
  </tr>
<% end %>
</tbody>
</table>

<div id="new_user_modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">New User</h3>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>
