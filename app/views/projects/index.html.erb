<h1>Slick Test</h1>

<div id="content">

  <%= link_to 'Back', "/" %>

<a id="new_project_modal_btn" data-backdrop="false" type="button" class="btn btn-primary new_modal_btn" href="#new_project_modal" data-toggle="modal">New Project</a>
<br />
<div id="projects_table" class="bs-docs-grid data_table">
  <div class="row-fluid show-grid">
    <div class="span2"></div>
    <div class="span4">Name</div>
  </div>
<% @projects.each do |project| %>
  <div id="project_<%= project.id %>" data-id="<%= project.id %>" class="row-fluid show-grid project_row">
    <div class="span2"><a class="delete" href="#">Delete</a></div>
    <div class="span4 name"><%= link_to project.name, project_path(project) %></div>
  </div>
<% end %>
</div>

<div id="new_project_modal" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>New Project</h3>
  </div>
  <div class="modal-body">
  </div>
</div>

</div>
